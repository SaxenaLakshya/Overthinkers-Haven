<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login - Overthinker's Haven</title>
    <link rel="icon" href="../images/favicon.jpg" type="image/jpg">
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #6574cd, #9b69c8);
        }

        .cover-page {
            background: linear-gradient(135deg, rgba(101, 116, 205, 0.9), rgba(155, 105, 200, 0.9)),
                url('../images/thoughts-bg.jpg') center/cover no-repeat fixed;
        }

        .content {
            animation: fadeInUp 0.8s ease-out;
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.18);
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        }

        .btn {
            transition: all 0.3s ease;
            background: linear-gradient(135deg, #7c4dff, #6574cd);
            box-shadow: 0 4px 15px rgba(101, 116, 205, 0.4);
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(101, 116, 205, 0.6);
            background: linear-gradient(135deg, #6574cd, #7c4dff);
        }

        .input-field {
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .input-field:focus {
            border-color: rgba(255, 255, 255, 0.4);
            box-shadow: 0 0 0 3px rgba(124, 77, 255, 0.2);
        }

        .link-hover {
            transition: all 0.2s ease;
            border-bottom: 1px dashed transparent;
        }

        .link-hover:hover {
            border-bottom: 1px dashed rgba(255, 255, 255, 0.6);
        }

        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0px); }
        }

        .floating {
            animation: float 6s ease-in-out infinite;
        }
    </style>
</head>

<body class="min-h-screen flex items-center justify-center text-gray-100 p-4">
    <div class="cover-page w-full min-h-screen flex items-center justify-center text-center px-4 absolute top-0 left-0">
        <div class="content bg-white bg-opacity-10 rounded-2xl p-8 shadow-2xl max-w-md w-full z-10 relative overflow-hidden">
            <div class="absolute -top-20 -right-20 w-40 h-40 rounded-full bg-indigo-500 opacity-10"></div>
            <div class="absolute -bottom-20 -left-20 w-60 h-60 rounded-full bg-purple-500 opacity-10"></div>
            
            <div class="relative z-10 flex flex-col items-center justify-center">
                <div class="floating mb-6">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253" />
                    </svg>
                    <h1 class="text-4xl font-bold mb-2 text-white">Overthinker's Haven</h1>
                    <p class="text-gray-200 mb-8">Find peace in your thoughts</p>
                </div>
                
                <h2 class="text-3xl font-bold mb-6 text-white">Welcome Back</h2>
                <form action="/login" method="POST" class="space-y-5 w-full">
                    <div>
                        <label for="email" class="block text-left text-sm mb-1 text-gray-200">Email</label>
                        <input type="email" name="email" id="email" required placeholder="your@email.com"
                            class="input-field w-full px-4 py-3 rounded-lg bg-white bg-opacity-20 text-white placeholder-gray-300 focus:outline-none">
                    </div>
                    <div>
                        <label for="password" class="block text-left text-sm mb-1 text-gray-200">Password</label>
                        <input type="password" name="password" id="password" required placeholder="••••••••"
                            class="input-field w-full px-4 py-3 rounded-lg bg-white bg-opacity-20 text-white placeholder-gray-300 focus:outline-none">
                    </div>
                    <div class="flex justify-between items-center text-sm">
                        <label class="flex items-center text-gray-200">
                            <input type="checkbox" class="rounded bg-white bg-opacity-20 border-transparent focus:ring-indigo-300">
                            <span class="ml-2">Remember me</span>
                        </label>
                        <a href="/signup" class="text-indigo-200 hover:text-white font-medium link-hover">Sign Up</a>
                    </div>
                    <button type="submit"
                        class="btn w-full text-white font-semibold px-4 py-3 rounded-full mt-6">
                        Sign In
                    </button>
                </form>

                <div class="mt-4">
                    <a href="/forgot" class="text-sm text-indigo-200 hover:text-white font-medium link-hover">
                        Forgot Password?
                    </a>
                </div>
            </div>
        </div>

        <div id="particles-js" class="absolute inset-0 pointer-events-none"></div>
    </div>

    <script src="https://cdn.jsdelivr.net/particles.js/2.0.0/particles.min.js"></script>
    <script>
        particlesJS("particles-js", {
            "particles": {
                "number": {
                    "value": 80,
                    "density": { "enable": true, "value_area": 800 }
                },
                "color": { "value": "#ffffff" },
                "shape": { "type": "circle" },
                "opacity": {
                    "value": 0.5, "random": true,
                    "anim": { "enable": true, "speed": 1, "opacity_min": 0.1, "sync": false }
                },
                "size": {
                    "value": 3, "random": true,
                    "anim": { "enable": true, "speed": 2, "size_min": 0.1, "sync": false }
                },
                "line_linked": { 
                    "enable": true, 
                    "distance": 150, 
                    "color": "#ffffff",
                    "opacity": 0.2,
                    "width": 1
                },
                "move": {
                    "enable": true, "speed": 1, "direction": "none",
                    "random": true, "straight": false, "out_mode": "out", "bounce": false
                }
            },
            "interactivity": {
                "detect_on": "canvas",
                "events": { 
                    "onhover": { 
                        "enable": true, 
                        "mode": "grab" 
                    }, 
                    "onclick": { 
                        "enable": true, 
                        "mode": "push" 
                    }, 
                    "resize": true 
                },
                "modes": {
                    "grab": {
                        "distance": 140,
                        "line_linked": {
                            "opacity": 0.5
                        }
                    },
                    "push": {
                        "particles_nb": 4
                    }
                }
            },
            "retina_detect": true
        });
    </script>
</body>

</html>
