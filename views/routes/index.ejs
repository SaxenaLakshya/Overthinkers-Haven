    <style>
        body {
            font-family: 'Inter', sans-serif;
            background: linear-gradient(135deg, #6574cd, #9b69c8);
        }

        .cover-page {
            background: linear-gradient(135deg, rgba(101, 116, 205, 0.9), rgba(155, 105, 200, 0.9)),
                url('../images/thoughts-bg.jpg') center/cover no-repeat fixed;
        }

        .content {
            animation: fadeInUp 0.8s ease-out;
            backdrop-filter: blur(12px);
            border: 1px solid rgba(255, 255, 255, 0.18);
            box-shadow: 0 8px 32px 0 rgba(31, 38, 135, 0.37);
        }

        .btn {
            transition: all 0.3s ease;
            background: linear-gradient(135deg, #7c4dff, #6574cd);
            box-shadow: 0 4px 15px rgba(101, 116, 205, 0.4);
        }

        .btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(101, 116, 205, 0.6);
            background: linear-gradient(135deg, #6574cd, #7c4dff);
        }

        .input-field {
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        .input-field:focus {
            border-color: rgba(255, 255, 255, 0.4);
            box-shadow: 0 0 0 3px rgba(124, 77, 255, 0.2);
        }

        .or-divider {
            display: flex;
            align-items: center;
            margin: 1.5rem 0;
        }

        .or-divider::before, .or-divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        }

        .or-divider span {
            padding: 0 1rem;
            color: rgba(255, 255, 255, 0.7);
            font-size: 0.875rem;
        }

        .social-btn {
            transition: all 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.2);
            background: rgba(255, 255, 255, 0.1);
        }

        .social-btn:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-2px);
        }

        .link-hover {
            transition: all 0.2s ease;
            border-bottom: 1px dashed transparent;
        }

        .link-hover:hover {
            border-bottom: 1px dashed rgba(255, 255, 255, 0.6);
        }

        @keyframes float {
            0% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
            100% { transform: translateY(0px); }
        }

        .floating {
            animation: float 6s ease-in-out infinite;
        }
    </style>
</head>

